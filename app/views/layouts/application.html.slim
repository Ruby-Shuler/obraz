doctype html
html
  head
    title
      | Obraz
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'

  body
    .menubar
      = link_to root_path do
        .logo
      .menu_items
        = link_to 'Луки', looks_path
        = link_to 'Вещи', items_path
        a Мероприятия
      .icons
        - if user_signed_in?
          = link_to current_user.name, orders_path
        a.bell
        a.like
        = link_to orders_path do
          .bag

    .container
      = yield

      footer
        p.small-p.grey © 2020 OBRAZ

        .footer
          p.small-p.grey FAQ
          p.small-p.grey Правила и условия
          p.small-p.grey Конфиденциальность и cookie-файлы
