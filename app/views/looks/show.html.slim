div
  .spacing-l-h

.m_breadcrumbs
  = link_to 'Луки', looks_path
  span →
  = link_to 'Название бренда', looks_path
  span →
  = link_to @look.name, @look

div
  .spacing-xl-h

h1
  = @look.name

div
  .spacing-m-h

.no_title
  = render partial: 'look_card_l', object: @look, as: :look

.look_additional_info
